<?xml version='1.0' encoding='utf-8'?>
<widget id="com.lnashoes.lna" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>LNA</name>
    <description>
        LNA korea Online Platform
    </description>
    <author email="hatcha82@gmail.com" href="http://cordova.io">
          LNA korea Online Platform
    </author>
    <content src="index.html" />
    <access origin="*" />
    <access origin="https://lnashoes.com" subdomains="true" />    
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="res/icon/logo.png" />
    <platform name="android">
        <allow-intent href="market:*" />
        <!-- <resource-file src="resources/android/xml/network_security_config.xml" target="app/src/main/res/xml/network_security_config.xml" />
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application" xmlns:android="http://schemas.android.com/apk/res/android">
            <application android:usesCleartextTraffic="true" />
            <application android:networkSecurityConfig="@xml/network_security_config" />
        </edit-config> -->
        <splash density="land-hdpi" src="res/screen/android/splash-land-hdpi.png" />
        <splash density="land-ldpi" src="res/screen/android/splash-land-ldpi.jpg" />
        <splash density="land-mdpi" src="res/screen/android/splash-land-mdpi.jpg" />
        <splash density="land-xhdpi" src="res/screen/android/splash-land-xhdpi.jpg" />
        <splash density="land-xxhdpi" src="res/screen/android/splash-land-xxhdpi.jpg" />
        <splash density="land-xxxhdpi" src="res/screen/android/splash-land-xxxhdpi.jpg" />
        <splash density="port-hdpi" src="res/screen/android/splash-port-hdpi.jpg" />
        <splash density="port-ldpi" src="res/screen/android/splash-port-ldpi.jpg" />
        <splash density="port-mdpi" src="res/screen/android/splash-port-mdpi.png" />
        <splash density="port-xhdpi" src="res/screen/android/splash-port-xhdpi.jpg" />
        <splash density="port-xxhdpi" src="res/screen/android/splash-port-xxhdpi.jpg" />
        <splash density="port-xxxhdpi" src="res/screen/android/splash-port-xxxhdpi.jpg" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
